@charset "utf-8";

/* 手機下載页面 */
a{ text-decoration: none;}
.main_phone {
    position: relative;
    width: 100%;
    overflow: hidden;
}
.phone_banner{
	width: 100%;
	height: 298px;
	min-width: 1000px;
}
.phone_banner img{
	width: 100%;
	height: 100%;
}
.banner_phone{
	background:url( http://192.168.0.140:81/TXWN/images/phone/phone_banner.png) center;
	position: absolute;
    top: 0;
    left: 0;
    margin: 0 auto;
}
.phone_content{
	position: relative;
	width: 100%;
	background: url(http://192.168.0.140:81/TXWN/images/phone/phone_bg.png) center;
	height: 709px;
}
.phone_inner{
	width: 1090px;height: 636px;
	background: url(http://192.168.0.140:81/TXWN/images/phone/phone_.png) center right no-repeat;
	margin: 0 auto;
	padding-top: 25px;
	
}
.phone_inner p{
	width: 432px;
	margin: 22px 0px;
	margin-left: 16px;
}
.phone_inner p span{
	display: block;
	color: #000000;
	height: 34px;
	line-height: 34px;
	font-weight: bold;
}
.phone_inner p a{
	display: inline-block;
	color: #ff0048;
}
.erweima_code{
	width: 500px;
	height: 246px;
}
.erweima_code .code_left{
	width: 250px;
	float: left;
}
.erweima_code .code_right{
	width: 250px;
	float: right;
}
.erweima_code img{
	width: 171px;
    height: 171px;
    margin: 0 auto;
    display: block;
    margin-bottom: 20px;
}
.erweima_code a{
	width: 213px;
	height: 48px;
	line-height: 48px;
	text-align: center;
	color: #000000;
	display: block;
	border-radius: 25px;
	margin:0 auto;
	font-weight: bold;
}



